{
  "GlobalConfiguration": {
    "BaseUrl": "https://localhost:7235"
  },
  "Routes": [
    {
      "ServiceKey": "CatalogService",
      "DownstreamPathTemplate": "/api/catalog-service/{everything}",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7008
        }
      ],
      "UpstreamPathTemplate": "/api/catalog-service/{everything}",
      "UpstreamHttpMethod": [ "Put", "Delete", "Get", "Post" ],
      "AuthenticationOptions": {
        //"AuthenticationProviderKey": "OnlineShopWebGatewayAuthenticationScheme",
        "AllowedScopes": [ "catalogservice.fullaccess" ]
      }
    },
    {
      "ServiceKey": "BasketService",
      "DownstreamPathTemplate": "/api/basket-service/{everything}",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7202
        }
      ],
      "UpstreamPathTemplate": "/api/basket-service/{everything}",
      "UpstreamHttpMethod": [ "Put", "Delete", "Get", "Post" ],
      "AuthenticationOptions": {
        //"AuthenticationProviderKey": "OnlineShopWebGatewayAuthenticationScheme",
        "AllowedScopes": [ "basketservice.fullaccess" ]
      },
      {
        "ServiceKey": "OrderingService",
        "DownstreamPathTemplate": "/api/ordering-service/{everything}",
        "DownstreamScheme": "https",
        "DownstreamHostAndPorts": [
          {
            "Host": "localhost",
            "Port": 7290
          }
        ],
        "UpstreamPathTemplate": "/api/ordering-service/{everything}",
        "UpstreamHttpMethod": [ "Put", "Delete", "Get", "Post" ],
        "AuthenticationOptions": {
          //"AuthenticationProviderKey": "OnlineShopWebGatewayAuthenticationScheme",
          "AllowedScopes": [ "orderingservice.fullaccess" ]
        }
      }
  ]
}